<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wagh.laundry.MainActivity"
    >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"/>


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl1">

        <View android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>


        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="0"
                android:textSize="18dp"
                android:gravity="center"/>

            /** android:text="How many days since service is not used"**/

            <View android:layout_width="1dp"
                android:layout_height="67dp"
                android:background="@color/colorPrimaryDark"/>


            <Button
                android:text="Orders Placed till now"
                android:layout_weight="1"
                android:id="@+id/b1"
                android:layout_height="fill_parent"
                android:background="?android:attr/selectableItemBackground"/>

            <View android:layout_width="1dp"
                android:layout_height="67dp"
                android:background="@color/colorPrimaryDark"/>


            <Button
                android:text="OFFERS"
                android:id="@+id/b2"
                android:layout_height="fill_parent"
                android:background="?android:attr/selectableItemBackground"/>
            />

        </TableRow>
        <View android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>


    </TableLayout>



    <View android:layout_width="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"/>



            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tl1"
                android:id="@+id/tl2">


                <TableRow>
                    <TextView />
                </TableRow>

                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>

                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>





                <TableRow>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Place Order"
                android:layout_weight="1"

                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/b3"/>

            <View android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"/>

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Check Status"
                android:minHeight="122dp"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/b4"

                />

                </TableRow>

                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>
                <TableRow>
                    <TextView />
                </TableRow>



            </TableLayout>


    <View android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/tl2"
        android:id="@+id/view" />



    <Button
        android:layout_width="fill_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Delete Order"
        android:id="@+id/b5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tl2"
        />




    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tl3"
        android:layout_below="@id/b5"

        >


        <View android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>



        <TableRow>
            <Button
                android:text="Pricing"
                android:layout_height="fill_parent"
                android:id="@+id/b6"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                />


            <View android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="@color/colorPrimaryDark"/>


            <Button
                android:text="Contact Us"
                android:id="@+id/b7"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                />

        </TableRow>


        <View android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>

    </TableLayout>




</RelativeLayout>

</ScrollView>
