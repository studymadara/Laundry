<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textSize="25dp"
        android:gravity="center"
        android:background="@android:color/holo_orange_dark"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"/>

    <TextView
    android:layout_marginTop="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pickup Location:"
    android:textSize="22sp"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="Enter the Address"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Time"
        android:textSize="22sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the Time"
        android:inputType="time"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Wearables:"
            android:textSize="22sp"
            android:id="@+id/selectwerabels"
            android:layout_marginTop="22dp"/>



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:layout_marginTop="12dp"
            android:id="@+id/placeordertl1"
            android:layout_below="@id/selectwerabels">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
        <EditText
            android:inputType="number"
            android:text="0"
            android:id="@+id/shirtvalue"
            android:textSize="22sp"
            android:textAlignment="center"/>


        <EditText
            android:text="0"
            android:inputType="number"
            android:layout_marginLeft="62sp"
            android:id="@+id/jeansvalue"
            android:textSize="22sp"
            android:textAlignment="center"/>


                <EditText
                    android:text="0"
                    android:id="@+id/sareesvalue"
                    android:inputType="number"
                    android:layout_marginLeft="62sp"
                    android:textSize="22sp"
                    android:textAlignment="center"/>




            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:text="Shirt"

                    android:id="@+id/shirt"
                    android:textSize="18dp"/>

             <TextView

                 android:layout_marginLeft="62sp"
                 android:textSize="18dp"
                 android:text="Jeans"
                 android:id="@+id/jeans"/>

                <TextView
                    android:textSize="18dp"

                    android:layout_marginLeft="62sp"

                    android:text="Sarees"
                    android:id="@+id/sarees"/>



            </TableRow>
        </TableLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Service:"
            android:textSize="22sp"
            android:layout_below="@id/placeordertl1"
            android:id="@+id/selectservices"
            android:layout_marginTop="22dp"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Washing"
            android:id="@+id/washing"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="45dp"
            android:layout_below="@id/selectservices"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron"
            android:id="@+id/iron"
            android:layout_alignTop="@+id/washing"
            android:layout_alignRight="@+id/placeordertl1"
            android:layout_alignEnd="@+id/placeordertl1" />




    </RelativeLayout>

        <Button
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="23sp"
            android:id="@+id/next"
            />

    </LinearLayout>

</ScrollView>

